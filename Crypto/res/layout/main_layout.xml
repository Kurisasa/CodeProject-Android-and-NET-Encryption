<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/original_message"
        />
    
    <EditText
        android:id="@+id/tvMessage" 
        android:padding="5dp"
		android:layout_height="150dp"
		android:layout_width="match_parent"
        android:inputType="text"
        android:background="@color/dark_blue"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
       
       <Button
        android:id="@+id/bEncrypt"
        android:onClick="OnButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/encrypt_message"
         />
       
       
        <Button
        android:id="@+id/bDecrypt"
        android:onClick="OnButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decrypt_message"
        
         />
         
          
        
    </LinearLayout>
  
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/encrypted_message_result"
        />
         
    <EditText
        android:id="@+id/tvEncryptedResult" 
        android:padding="5dp"
		android:layout_height="150dp"
		android:inputType="none"
		android:layout_width="match_parent"
        android:background="@color/dark_green"
        />
    
    
</LinearLayout>
